                <form action="/registrarTrabajador" method="post">
                    <legend>
                        Registra nuevo trabajador
                    </legend>
                    <div class="form-group">
                        <input type="text" id="emailEmpresa" class="form-control" name="emailEmpresa" readonly="readonly" value="<%= user.local.email %>">
                    </div>
                    <div class="form-group">
