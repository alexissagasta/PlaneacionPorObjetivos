                    </div>
                    <button class="btn btn-primary" style =  "margin-top: 10px;">
                        Registrar
                    </button>
                </form>
                <hr>

                <table style =  "background-color:#FFFFFF; border: 1px solid black; border-collapse: collapse;" class="table table-bordered table-hover">
                    <thead>
                        <tr>
                            <th>#</th>
                            <!--<th>Empresa registrada</th>-->
                            <th>correo</th>
                            <th>Nombre</th>
                            <th>Operación</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% for(var i = 0; i < trabajadores.length; i++) {%>
                            <tr>
                                <% if(user.local.email == trabajadores[i].emailEmpresa) {%>
                                <td><%= i+1%></td>
                                <td>
                                    <%= trabajadores[i].emailTrabajador%>
                                </td>
                                <td>
                                    <strong>
                                        <%= trabajadores[i].nombreTrabajador%>
                                    </strong>
                                </td>
                                
                                <td>
                                    <!--<a href="">Done</a>-->
                                    <a class="btn btn-danger"  id="eliminar" href="/eliminarTrabajador/<%=trabajadores[i]._id%>">Eliminar</a>
                                </td>
                                <% } %>
                            </tr>
                        <% } %>
                    </tbody>
                </table>
            </div>

            <script>
                document.getElementById("nombreTrabajador").focus();
                document.getElementById("eliminar").addEventListener('click', function(e){
                    let response = confirm("Eliminar trabajador?");
                    if(!response){
                        e.preventDefault();
                    }
                });
            </script>
